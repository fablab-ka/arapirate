<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ara.fablabka.arapirate" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ChannelListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChannelDetailActivity"
            android:label="@string/title_channel_detail"
            android:parentActivityName=".ChannelListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChannelListActivity" />
        </activity>
    </application>

</manifest>
